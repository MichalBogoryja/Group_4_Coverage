
<launch>
	
	<arg name="robot_prefix1" default="turtlebot1"/>

	<node name="mapping_$(arg robot_prefix1)" pkg="octomap_server" type="octomap_server_node" respawn="false" output="screen">

		<param name = "base_frame_id" value = "/kinect_depth"/>
		<param name = "resolution" value = "0.075"/>
		<param name = "sensor_model/hit" value = "0.75"/>
		<param name = "sensor_model/miss" value = "0.45"/>
		<param name = "sensor_model/min" value = "0.12"/>
		<param name = "sensor_model/max" value = "0.98"/>

		<remap from = "cloud_in" to = "/vrep/$(arg robot_prefix1)/depth/pcd_rect"/>
		<remap from = "octomap_point_cloud_centers" to = "/vrep/$(arg robot_prefix1)/octomap"/>
	</node>
</launch>
